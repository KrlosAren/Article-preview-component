+responsive(mobile-first)
  .container
    max-width 300px
    max-height 65vh
    height 100%
    flex-direction column
    align-items center
    justify-content space-around

  .imagen
    width 100%
    height 100%
    background-size fill
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-left-radius: 0;

  .content
    width 100%
    height 100%
    padding 0

    &__title
      max-width 260px
      margin 20px 20px 0 20px
      width 100%
      height auto
      line-height 1.3em
      letter-spacing 0.05em
      mixin-typo(font-weight-700, font-13 + 2, font-marope, color-primary)

    &__text
      max-width 260px
      margin 10px 20px 5px 20px
      line-height 1.4em
      margin-top 5px
      margin-bottom 15px
      font-size 12px
      letter-spacing: 0.01em;

    &__avatar
      width 260px
      margin 0 20px 0 20px
      height auto

    &__button
      z-index 10

  .content__button--share
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    position absolute
    width 100%
    height 60px
    left 0
    top calc(65vh - 60px)
    &::before
      display none
    span
      width 80%
      margin 0
      align-items center
      justify-content space-evenly


  .code
    max-width 300px
    width 80%
